<%- include('layout', { body: null }) %>
<h2>Список груп</h2>
<a href="/groups/create">+ Додати групу</a>
<% groups.forEach(group => { %>
  <li>
    <%= group.name %>
    <a href="/groups/edit/<%= group.name %>">Редагувати</a>
    <form action="/groups/delete/<%= group.name %>" method="post" style="display:inline;">
      <button type="submit" onclick="return confirm('Видалити групу?')">Видалити</button>
    </form>
  </li>
<% }) %>
